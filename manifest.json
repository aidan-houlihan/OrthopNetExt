
{
  "manifest_version": 3,
  "name": "OrthopNet Ext",
  "version": "1.0",
  "description": "Add EMu-like functionality",
  "permissions": ["activeTab", "scripting","storage"],
  "host_permissions": ["<all_urls>"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "save_and_append": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "Alt+Shift+E"
      },
      "description": "Execute save content script in current tab"
    },
    "ditto":{
      "suggested_key":{
        "default": "Alt+Shift+L",
        "mac": "Alt+Shift+L"
      },
      "description": "use ditto command"
    }
  }
}

